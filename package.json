  "scripts": {
    "start": "node ./bootstrap.js",
    "build": "rm -rf build/ && node ./bootstrap.js && npm run sitemap",
    "deploy": "gh-pages -d build && npm run purge_cf",
    "sitemap": "cd build && sitemap-static --prefix=http://survivejs.com/ > sitemap.xml",
    "purge_cf": "node ./utils/purge_cf.js",
    "lint:links": "hyperlink build/index.html -r | tap-min"
  },
